<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:background="@drawable/bg"
    android:weightSum="30"
    android:orientation="vertical">

    <TextView
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="2"
        android:fontFamily="@font/oregano"
        android:text="About Us"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="45dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/oregano"
            android:scrollbars="vertical"
            android:text="We are a hardworking restaurant and some
other similar shit don't pay much heed to this. WTF bro why you still reading this shit? This is an utter waste of your time! Okay so you do not
care about your time.

Now go. Bye"
            android:textColor="@android:color/black"
            android:textSize="24dp" />

    </android.support.v7.widget.CardView>




</LinearLayout>